{
  "name": "@tanqory/eslint-config-base",
  "version": "1.0.0",
  "description": "Tanqory's base JavaScript ESLint configuration for modern development",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./legacy": "./legacy.js",
    "./whitespace": "./whitespace.js",
    "./rules/best-practices": "./rules/best-practices.js",
    "./rules/es6": "./rules/es6.js",
    "./rules/node": "./rules/node.js",
    "./rules/style": "./rules/style.js",
    "./rules/errors": "./rules/errors.js",
    "./rules/imports": "./rules/imports.js",
    "./rules/strict": "./rules/strict.js",
    "./rules/variables": "./rules/variables.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "prelint": "eclint check $(git ls-files | xargs find 2> /dev/null | grep -vE 'node_modules|\\.git')",
    "lint": "eslint --report-unused-disable-directives .",
    "pretests-only": "node ./test/requires",
    "tests-only": "babel-tape-runner ./test/test-*.js",
    "prepublish": "not-in-publish || npm run prepublishOnly",
    "pretest": "npm run --silent lint",
    "test": "npm run --silent tests-only",
    "pretravis": ":",
    "travis": "npm run --silent tests-only",
    "posttravis": ":"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tanqory/javascript"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "tanqory",
    "javascript",
    "styleguide",
    "es2015",
    "es2016",
    "es2017",
    "es2018"
  ],
  "author": "Tanqory <dev@tanqory.com>",
  "contributors": [
    {
      "name": "Tanqory Development Team",
      "url": "https://tanqory.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tanqory/javascript/issues"
  },
  "homepage": "https://github.com/tanqory/javascript",
  "devDependencies": {
    "@babel/runtime": "^7.25.6",
    "babel-preset-tanqory": "^4.5.0",
    "babel-tape-runner": "^3.0.0",
    "eclint": "^2.8.1",
    "eslint": "^8.2.0 || ^9.0.0",
    "eslint-find-rules": "^4.1.0",
    "eslint-plugin-import": "^2.30.0",
    "in-publish": "^2.0.1",
    "safe-publish-latest": "^2.0.0",
    "tape": "^5.9.0"
  },
  "peerDependencies": {
    "eslint": "^8.2.0 || ^9.0.0",
    "eslint-plugin-import": "^2.30.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "confusing-browser-globals": "^1.0.11"
  }
}
